<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:contact="clr-namespace:Contacts.Maui.Views.Controls"
             x:Class="Contacts.Maui.Views.EditContactPage"
             Title="Edit Contact">
    
    <!--Reusable component--> 

    <contact:ContactControls x:Name="contactControl"
                             OnSave="btnUpdate_Clicked"
                             OnCancel="btnCancel_Clicked"
                             OnError="contactControl_OnError">
        
    </contact:ContactControls>
    
</ContentPage>

<!--The default orientation of a stacklayout is vertical.
 By using HorizontalStackLayout, it must be combined with HeightRequest.
 In the VerticalStacklayout's case, it must be combined with WidthRequest.-->